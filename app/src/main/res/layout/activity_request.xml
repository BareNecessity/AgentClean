<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e6e9ed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/request_panel_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/requestpanel"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/request_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Request No - 008234"
            android:textColor="#2630a3"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/request_panel_cl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="#6, 600"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/ready_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:text="Request confirmed - ready to pickup"
            android:textColor="#edb818"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/request_tv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:text="Time 11:45am, 1 Dec, 2019"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/request_panel_cl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ready_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pickup_address_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request_panel_cl">

        <TextView
            android:id="@+id/pickup_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Pickup Address"
            android:textColor="#2b4dd6"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pickup_address_cl" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block 4, Flat 1, LSDPC Housing Estate , Off\nAdeniran Ogunsanya street, Surulere, Lagos"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/pickup_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/pickup_address_cl"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pickup_date_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/pickup_address_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/date_and_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Date And Time"
            android:textSize="20sp"
            android:textColor="#2b4dd6"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/pickup_date_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wed, 3rd Dec. 2pm"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/date_and_time_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/delivery_date_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/pickup_date_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/delivery_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Date And Time"
            android:textColor="#2b4dd6"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/delivery_date_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday, 6th Dec, 2019"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/delivery_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dry_cleaner_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/delivery_date_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dry_cleaner_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drycleaner"
            android:textSize="20sp"
            android:textColor="#2b4dd6"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/dry_cleaner_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elite Cleaners"
            android:textSize="17sp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dry_cleaner_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/dry_cleaner_cl"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/specifications_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dry_cleaner_cl">

        <TextView
            android:id="@+id/gender_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Male"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/specifications_cl" />

        <TextView
            android:id="@+id/trouser_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:text="6 trousers"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_tv" />

        <TextView
            android:id="@+id/trouser_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="(wash and iron)"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/trouser_tv"
            app:layout_constraintTop_toTopOf="@+id/trouser_tv"
            app:layout_constraintBottom_toBottomOf="@+id/trouser_tv"/>

        <TextView
            android:id="@+id/trouser_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,000"
            android:textSize="17sp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/trouser_tv"
            app:layout_constraintBottom_toBottomOf="@id/trouser_tv"/>

        <TextView
            android:id="@+id/shirts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Shirts"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trouser_tv"/>


        <TextView
            android:id="@+id/shirt_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(wash and iron)"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/shirts_tv"
            app:layout_constraintTop_toTopOf="@id/shirts_tv"
            app:layout_constraintBottom_toBottomOf="@id/shirts_tv"/>

        <TextView
            android:id="@+id/shirt_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,400"
            android:textSize="17sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/shirts_tv"
            app:layout_constraintBottom_toBottomOf="@id/shirts_tv"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/natives_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Natives"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/shirts_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/native_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(iron only)"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/natives_tv"
            app:layout_constraintBottom_toBottomOf="@id/natives_tv"
            app:layout_constraintStart_toEndOf="@+id/natives_tv"/>

        <TextView
            android:id="@+id/native_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textSize="17sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/natives_tv"
            app:layout_constraintBottom_toBottomOf="@id/natives_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/singlet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Singlets"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/natives_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/singlet_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(wash only"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/singlet_tv"
            app:layout_constraintTop_toTopOf="@id/singlet_tv"
            app:layout_constraintBottom_toBottomOf="@id/singlet_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,000"
            android:textSize="17sp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@id/singlet_tv"
            app:layout_constraintBottom_toBottomOf="@id/singlet_tv"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/total_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/specifications_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/subtotal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/total_tv"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/sub_total_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#6,600"
            android:textSize="17sp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@+id/subtotal_tv"
            app:layout_constraintBottom_toBottomOf="@id/subtotal_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount/Promo Code"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/subtotal_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/total_tv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#0"
            android:textSize="17sp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="@id/discount_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/discount_tv"/>





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>